<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shelf1 Items" />

            <EditText
                android:id="@+id/editTextShelf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shelf2 Items" />

            <EditText
                android:id="@+id/editTextShelf2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shelf3 Items" />

            <EditText
                android:id="@+id/editTextShelf3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shelf4 Items" />

            <EditText
                android:id="@+id/editTextShelf4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/cancelButtonWarehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <Button
                android:id="@+id/setButtonWarehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>


